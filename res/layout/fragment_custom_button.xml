<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="8" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3" >

        <Button
            android:id="@+id/btn_sin"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="sin"
             android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size" />

        <Button
            android:id="@+id/btn_cos"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="cos"
            android:textColor="@color/white_silver"
           android:textSize="@dimen/btn_size"  />

        <Button
            android:id="@+id/btn_tan"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="tan"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3" >

        <Button
            android:id="@+id/btn_ln"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="ln"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />

        <Button
            android:id="@+id/btn_log"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="log"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />

        <Button
            android:id="@+id/btn_factorial"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="!"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3" >

        <Button
            android:id="@+id/btn_pi"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="π"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />

        <Button
            android:id="@+id/btn_exp"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="e"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />

        <Button
            android:id="@+id/btn_involution"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="^"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3" >

        <Button
            android:id="@+id/btn_left_bracket"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="("
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />

        <Button
            android:id="@+id/btn_right_bracket"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text=")"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />

        <Button
            android:id="@+id/btn_sqrt"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_value"
            android:text="√"
            android:textColor="@color/white_silver"
            android:textSize="@dimen/btn_size"  />
    </TableRow>

</TableLayout>