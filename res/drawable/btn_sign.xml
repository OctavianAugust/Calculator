<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="8dp" />

            <stroke android:width="1dp" android:color="@color/silver" />

            <gradient android:endColor="@color/silver" android:gradientRadius="100" android:startColor="@color/black" android:type="radial" />
        </shape></item>
    <item><shape>
            <corners android:radius="8dp" />

            <stroke android:width="1dp" android:color="@color/silver" />

            <gradient android:endColor="@color/silver" android:gradientRadius="100" android:startColor="@color/white_silver" android:type="radial" />
        </shape></item>

</selector>