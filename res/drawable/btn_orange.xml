<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="8dp" />

            <stroke android:width="1dp" android:color="@color/black_orange" />

            <gradient android:endColor="@color/orange" android:gradientRadius="200" android:startColor="@color/white_orange" android:type="radial" />
        </shape></item>
    <item> 
        <shape>
            <corners android:radius="8dp" />

            <stroke android:width="1dp" android:color="@color/white_orange" />
             <gradient android:endColor="@color/orange" android:gradientRadius="200" android:startColor="@color/black_orange" android:type="radial" />

        </shape></item>

</selector>